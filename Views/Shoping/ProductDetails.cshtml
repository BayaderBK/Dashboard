@model IEnumerable<ProductDetails>

@{
    Layout = "~/Views/Shared/_LayoutShoping.cshtml";

}

<body dir="rtl" id="kt_app_body" data-kt-app-layout="dark-sidebar" data-kt-app-sidebar-push-header="true" data-kt-app-sidebar-push-toolbar="true" data-kt-app-sidebar-push-footer="true" data-kt-app-toolbar-enabled="true" class="app-default">

    <section style="background-color: #0C2D48;">
    <div class="container py-5">
            <div class="container h-100">
                @foreach(var item in Model)
                {
                                 
                    <div class="row d-flex justify-content-center my-4">
      <div class="col-md-8">
        <div class="card mb-4">
          <div class="card-header py-3">
            <h5 class="mb-0">Cart - 2 items</h5>
          </div>
          <div class="card-body">
            <!-- Single item -->
            <div class="row">
              <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                <!-- Image -->
                <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                  <img src="~/assets/images/@item.Image"
                    class="w-100" />
                  <a href="#!">
                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                  </a>
                </div>
                <!-- Image -->
              </div>

              <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                <!-- Data -->
                <p><strong>@item.ProductName</strong></p>
                <button type="button" class="btn btn-sm me-1 mb-2" style="background-color: #669BBC;" Remove item data-mdb-toggle="tooltip"
                  title="Remove item">
                 <i class="fas fa-trash" style="color: #0C2D48"></i>
                </button>
                <button type="button" class="btn btn-danger btn-sm mb-2" data-mdb-toggle="tooltip"
                  title="Move to the wish list">
                  <i class="fas fa-heart"></i>
                </button>
                <!-- Data -->
              </div>

              <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                <!-- Quantity -->
                <div class="d-flex mb-4" style="max-width: 300px">
                <button class="btn px-1 me-1" style="background-color: #669BBC;"
                    onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                 <i class="fas fa-minus" style="color: #0C2D48"></i>
                  </button>

                  <div class="form-outline">
                    <input id="form1" min="0" name="quantity" value="1" type="number" class="form-control" />
                    <label class="form-label" for="form1"> الكمية</label>
                  </div>

                   <button class="btn px-1 ms-1" style="background-color: #669BBC;"
                    onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                   <i class="fas fa-plus" style="color: #0C2D48"></i>
                  </button>
                </div>
                <!-- Quantity -->

                <!-- Price -->
                <p class="text-start text-md-center">
                 <strong>@item.Qty</strong>
                </p>
                <!-- Price -->
              </div>
            </div>
            <!-- Single item -->


            <!-- Single item -->
            <!-- Single item -->
          </div>
        </div>
        <div class="card mb-4">
          <div class="card-body">
            <p><strong>تاريخ الوصول المتوقع</strong></p>
            <p class="mb-0">12.10.2020 - 14.10.2020</p>
          </div>
        </div>
        <div class="card mb-4 mb-lg-0">
          <div class="card-body">
            <p><strong>بطاقات الدفع </strong></p>
            <img class="me-2" width="45px" src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"alt="Visa" />
            <img class="me-2" width="45px" src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg" alt="American Express" />
            <img class="me-2" width="45px" src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"alt="Mastercard" />
            <img class="me-2" width="45px" src="~/assets/images/paypal.png" alt="Paypal" />
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-header py-3">
            <h5 class="mb-0">ملخص الطلبات</h5>
          </div>
          <div class="card-body">
            <ul class="list-group list-group-flush">
              <li
                class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                سعر المنتج
                <span>@item.Price</span>
              </li>
              <li
                class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                <div>
                  <strong>إجمالي المنتجات</strong>
                  <strong>
                    <p class="mb-0">(يشمل الضريبة المضافة)</p>
                  </strong>
                </div>
                <span><strong>@(item.Price * 0.15 + item.Price)</strong></span>
              </li>
            </ul>

             <div class="d-flex justify-content-end">
                                        <a asp-action="Checkout" asp-route-id="@item.ProductId" class="btn text-white" style="background-color: #669BBC;"> اشتري الان</a>
                                        <a asp-action="Index" class="btn  btn-lg me-2 " style="background-color: #FDF0D5;">العودة للمنتجات</a>
             </div>
          </div>
        </div>
      </div>
    </div>
                }
            </div>


    </div>
</section>
 </body>



