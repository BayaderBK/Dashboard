@model Cart
@{
    Layout = "~/Views/Shared/_LayoutShoping.cshtml";

}
<body dir="rtl" id="kt_app_body" data-kt-app-layout="dark-sidebar" data-kt-app-sidebar-push-header="true" data-kt-app-sidebar-push-toolbar="true" data-kt-app-sidebar-push-footer="true" data-kt-app-toolbar-enabled="true" class="app-default">

<div class="card">
        <div class="card-body" style=" background-color: #0C2D48;">
        <div class="container mb-5 mt-3">
            <div class="row d-flex align-items-baseline">
                <div class="col-xl-9">
                    <p style="color: #7e8d9f;font-size: 20px;">رقم الفاتورة; <strong>@Model.Id</strong></p>
                </div>
            </div>
            <div class="container">
                <div class="col-md-12">
                    <div class="text-center">
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-8">
                        <ul class="list-unstyled">
                            <li class="text-white"> : إلى <span style="color:#8f8061 ;">اسم العميل </span></li>
                            <li class="text-white">الشارع, المدينة</li>
                            <li class="text-white">الحي, البلد</li>
                            <li class="text-white"><i class="fas fa-phone"></i> رقم الجوال</li>
                        </ul>
                    </div>
                    <div class="col-xl-4">
                        <p class="text-white">الفاتورة</p>
                        <ul class="list-unstyled">
                            <li class="text-white">
                                <a href="c:\dashboard\models\costumer.cs">c:\dashboard\models\costumer.cs</a>
                                <i class="fas fa-circle" style="color:#8f8061 ;"></i> <span class="fw-bold">ID:</span>#123-456
                            </li>
                            <li class="text-white">
                                    <i class="fas fa-circle" style="color:#8f8061 ;"></i> <span class="fw-bold"> تاريخ الطلب:  </span>Jun 23,2021
                            </li>
                            <li class="text-white">
                                    <i class="fas fa-circle" style="color:#8f8061;"></i> <span class="me-1 fw-bold"> حالة الطلب: </span><span class="badge bg-warning text-black fw-bold">
                                    Unpaid
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>
                <hr />
                <div class="row my-2 mx-1 justify-content-center">
                    <div class="col-md-2 mb-4 mb-md-0">
                        <div class="
                        bg-image
                        ripple
                        rounded-5
                        mb-4
                        overflow-hidden
                        d-block
                        " data-ripple-color="light">
                            <img src="~/assets/images/@Model.Images"
                                 class="w-100" height="100px" alt="Elegant shoes and shirt" />
                            <a href="#!">
                                <div class="hover-overlay">
                                    <div class="mask" style="background-color: hsla(0, 0%, 98.4%, 0.2)"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-7 mb-4 mb-md-0">
                        <p class="fw-bold text-white">@Model.ProductName</p>
                        <p class="mb-1">
                                <span class="text-white me-2">الكمية:</span><span>@Model.Qty</span>
                        </p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-xl-3">
                        <ul class="list-unstyled">
                                <li class="text-white ms-3"><span class="text-white me-4"> الاجمالي:</span>@Model.Price</li>
                                <li class="text-white ms-3 mt-2"><span class="text-white me-4">الضريبة : </span>@Model.Tax</li>
                        </ul>
                        <p class="text-white float-start">
                                <span class="text-white me-3"> الاجمالي شامل الضريبة المضافة :</span><span style="font-size: 25px;">@(Model.Price * 0.15 + Model.Price)</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</body>