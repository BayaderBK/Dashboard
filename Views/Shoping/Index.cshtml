@model IEnumerable<Product>;

@{
    Layout = "~/Views/Shared/_LayoutShoping.cshtml";

}
<body dir="rtl" id="kt_app_body" data-kt-app-layout="dark-sidebar" data-kt-app-sidebar-push-header="true" data-kt-app-sidebar-push-toolbar="true" data-kt-app-sidebar-push-footer="true" data-kt-app-toolbar-enabled="true" class="app-default">

    <section style="background-color: #0C2D48;">
        <div class="container py-5">

        <div class="row">

        @foreach (var item in Model)
        {
          <div class="col-md-12 col-lg-4 mb-4 ">
          <div class="card">
          <div class="d-flex justify-content-between p-3">
            <div
              class="bg-danger rounded-circle d-flex align-items-center justify-content-center shadow-1-strong"
              style="width: 35px; height: 35px;">
             <i class="bi bi-heart"></i>
            </div>
          </div>
                            <img src="~/assets/images/@item.Image"
                                 class="card-img-top w-100" />
          <div class="card-body">
            <div class="d-flex justify-content-between mb-3">
              <h5 class="mb-0">@item.ProductName</h5>
              <h5 class="text-dark mb-0">@item.Price  ريال</h5>
            </div>

            <div class="d-flex justify-content-between mb-2">
              <p class="text-muted mb-0">Available: <span class="fw-bold">6</span></p>
              <div class="ms-auto text-warning">
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
              </div>
             <span>
              @{
                 var price = @item.Price * 3;

              }

              </span>
            </div>

              
            <div class="d-flex flex-row">
                                    <a asp-action="ProductDetails" asp-route-id="@item.Id" class="btn ms-1 text-white " style="background-color: #669BBC;" data-mdb-ripple-color="dark"> تفاصيبل المنتج </a>
                                    <button type="button" class="btn ms-1" style="background-color: #FDF0D5;"><i class="bi bi-basket3" style="color: #0C2D48"></i></button>
           </div>
          </div>
        </div>
        </div>
            }
          </div>
</div>
</section>
</body>
        
